						</th>
						<th class="align-top">
							<%= sort_link(@q, :wife_name, 'WIFE NAME') %>
						</th>
						<th class="align-top">
							<%= sort_link(@q, :dob_wife, 'DOB WIFE') %>
						</th>
						<th class="align-top">
							<%= sort_link(@q, :no_of_children, 'NO OF CHILDREN') %>
