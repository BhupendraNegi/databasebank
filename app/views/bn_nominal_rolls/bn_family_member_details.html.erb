						</th>
						<th class="align-top">
							<%= sort_link(@q, :mob_no_res, 'MOB NO RES') %>
						</th>
						<th class="align-top">
							<%= sort_link(@q, :remarks, 'REMARKS') %>
						</th>
						<th>
						</th>
				</tr>
			</thead>
			<tbody>
				<% @bn_family_member_details.each do | ere |%>
					<tr>
						<td>
							<%= ere.bn_nominal_roll.army_no %>
