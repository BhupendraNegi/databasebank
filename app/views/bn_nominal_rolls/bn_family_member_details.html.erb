						<td>
							<%= ere.family_problem %>
						</td>
						<td>
							<%= ere.mob_no_indl %>
						</td>
						<td>
							<%= ere.mob_no_res %>
						</td>
						<td>
							<%= ere.remarks %>
						</td>
						<td>
							<%= link_to "Edit", bn_nominal_roll_path(ere.bn_nominal_roll)%>
						</td>
					</tr>
				<% end %> 
			</tbody>
		</table>
	</div>
  <%= paginate @bn_family_member_details %>
</div>