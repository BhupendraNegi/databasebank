						<td>
							<%= ere.bn_nominal_roll.trade %>
						</td>
						<td>
							<%= ere.bn_nominal_roll.dob %>
						</td>
						<td>
							<%= ere.wife_name %>
						</td>
						<td>
							<%= ere.dob_wife %>
						</td>
						<td>
							<%= ere.no_of_children %>
