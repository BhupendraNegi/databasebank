<div class="container">
  <h5 class="mt-4"> BN NOMINAL ROLL </h5>
  <br>
  <%= render partial: "search" %>
  <table class="table table-bordered">
    <thead class="bg-light">
      <tr width='100%'>
          <th width='10%' class="align-top">
            <%= sort_link(@q, :army_no, 'ARMY NO') %>
          </th>
          <th width='7%' class="align-top">
            <%= sort_link(@q, :rank, 'RANK') %>
          </th>
          <th width='15%' class="align-top">
            <%= sort_link(@q, :name, 'NAME') %>
          </th>
          <th width='6%' class="align-top">
            <%= sort_link(@q, :coy, 'COY') %>
          </th>
          <th width='9%' class="align-top">
            <%= sort_link(@q, :trade, 'TRADE') %>
          </th>
          <th width='10%' class="align-top">
            <%= sort_link(@q, :date_of_tos_in_unit, 'DT OF TOS IN UNIT') %>
          </th>
          <th width='10%' class="align-top">
            <%= sort_link(@q, :pers_med_cat, 'PERS MED CAT') %>
          </th>
          <th width='8%' class="align-top">
            <%= sort_link(@q, :civ_edn, 'CIV EDN') %>
          </th>
          <th width='8%' class="align-top">
            <%= sort_link(@q, :marital_status, 'MARITAL STATUS') %>
          </th>
          <th width='13%' class="align-top">
            <%= sort_link(@q, :remarks, 'REMARKS') %>
          </th>
          <th width="6%">
          </th>

      </tr>
    </thead>
    <tbody>
      <% @bn_nominal_rolls.each do | bn |%>
        <tr>
          <td>
            <%= bn.army_no %>
          </td>
          <td>
            <%= bn.rank %>
          </td>
          <td>
            <%= bn.name %>
          </td>
          <td>
            <%= bn.coy %>
          </td>
          <td>
            <%= bn.trade %>
          </td>
          <td>
            <%= bn.date_of_tos_in_unit %>
          </td>
          <td>
            <%= bn.pers_med_cat %>
          </td>
          <td>
            <%= bn.civ_edn %>
          </td>
          <td>
            <%= bn.marital_status %>
          </td>
          <td>
            <%= bn.remarks %>
          </td>
          <td>
            <%= link_to "Edit", bn_nominal_roll_path(bn)%>
          </td>
        </tr>
      <% end %> 
    </tbody>
  </table>
  <%= paginate @bn_nominal_rolls %>
</div>


