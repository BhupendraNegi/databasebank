<div class="container">
	<div class="row mb-3">
		<div class="col-12">
			<%= form_with(method: "get", url: bn_nominal_rolls_path, html: { class: "form-horizontal", role: "form" }, remote: true) do |f| %>
				<div class="row form-group">
					<div class="col-2 px-1">
						<%= f.text_field :name, class: "form-control", placeholder: "Army No", autofocus: true %>
					</div>
					<div class="col-1 px-1">
						<%= f.text_field :name, class: "form-control", placeholder: "Rank" %>
					</div>
					<div class="col-2 px-1">
						<%= f.text_field :name, class: "form-control", placeholder: "Trade" %>
					</div>
					<div class="col-2 px-1">
						<%= f.text_field :name, class: "form-control", placeholder: "Name"%>
					</div>
					<div class="col-2 px-1">
						<%= f.text_field :name, class: "form-control", placeholder: "Marital Status" %>
					</div>
					<div class="col-1 px-1">
						<%= f.select :coy, ["ALL", "A COY", "B COY", "C COY", "D COY", "SP COY", "HQ COY", "OTHERS"], class: "form-control pt-2", placeholder: "Coy"  %>
					</div>
					<div class="col-1 px-1 d-flex justify-content-end">
						<%= f.submit "Search", class: "btn btn-secondary" %>
					</div>
					<div class="col-1 px-1 d-flex justify-content-end">
						<%= link_to "Clear", bn_nominal_rolls_path, method: "get", remote: true, class: "btn btn-outline-secondary pt-1" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>