<!DOCTYPE html>
<html>
  <head>
    <title>Database Bank</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "/assets/application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <%= render partial: "layouts/navbar" %>
    <div class="container-fluid"> 
      <% if notice.present? || alert.present? %>
        <div class="container d-flex justify-content-center mt-2">
          <div class="notice p-2 <%= notice.present? ? 'alert alert-warning alert-dismissible fade show' : '' %>" role="alert">
            <%= notice %>
          </div>
          <div class="alert p-2 <%= alert.present? ? 'alert alert-danger alert-dismissible fade show' : '' %>" role="alert">
            <%= alert %>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </div>
    
  </body>
</html>
